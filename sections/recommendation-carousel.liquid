{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }


  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section
  class="recommendations-carousel section-{{ section.id }} section-{{ section.id }}-padding"
  aria-labelledby="recommendations-heading-{{ section.id }}"
>
  <div class="container">
    <div class="tw:m-auto tw:max-w-146 tw:mt-6 tw:lg:max-w-full">
      <recommendations-carousel
        data-url="{{ routes.product_recommendations_url }}?limit={{ section.settings.products_to_show }}"
        data-section-id="{{ section.id }}"
        data-product-id="{{ product.id }}"
        role="region"
        aria-live="polite"
        aria-busy="false"
      >
        {% if recommendations.performed and recommendations.products_count > 0 %}
          <h2
            id="recommendations-heading-{{ section.id }}"
            class="tw:text-dark tw:text-2xl tw:text-center tw:mb-8 tw:lg:text-3xl tw:lg:mb-12"
          >
            {{- section.settings.heading | escape | default: 'You may also like' -}}
          </h2>
        {% endif %}
        <div
          class="swiper recommendations-carousel__swiper tw:h-fit"
          role="region"
          aria-label="{{ section.settings.heading | escape }}"
        >
          <div class="swiper-wrapper">
            {% for recommended_product in recommendations.products %}
              <div class="swiper-slide" role="group" aria-roledescription="slide">
                {%- render 'product-card', product: recommended_product, show_price: true -%}
              </div>
            {% endfor %}
          </div>
          <div class="swiper-button-next tw:w-10 tw:h-10 tw:aria-disabled:!opacity-0">
            {{- 'slider-arrow.svg' | inline_asset_content -}}
          </div>
          <div class="swiper-button-prev tw:transform tw:rotate-180 tw:w-10 tw:h-10 tw:aria-disabled:!opacity-0">
            {{- 'slider-arrow.svg' | inline_asset_content -}}
          </div>
        </div>
      </recommendations-carousel>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Recommendations Carousel",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.recommendations-carousel.settings.heading.label",
      "default": "t:sections.recommendations-carousel.settings.heading.default"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "t:sections.recommendations-carousel.settings.products_to_show.label",
      "default": 10,
      "min": 1,
      "max": 10,
      "step": 1
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:general.padding.padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:general.padding.padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "t:sections.recommendations-carousel.presets"
    }
  ],
  "enabled_on": {
    "templates": ["product"]
  }
}
{% endschema %}

