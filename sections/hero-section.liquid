{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.66 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.66 | round: 0 }}px;
  }


  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section
  class="hero-banner section-{{ section.id }} section-{{ section.id }}-padding tw:w-full"
  data-section-id="{{ section.id }}"
>
  <div class="container tw:relative tw:!p-0">
    {%- if section.settings.hero_desktop != blank and section.settings.hero_mobile != blank -%}
      <picture>
        <source
          media="(min-width: 1024px)"
          srcset="
            {{ section.settings.hero_desktop | image_url: width: 1920 }} 1920w,
            {{ section.settings.hero_desktop | image_url: width: 1440 }} 1440w
          "
        >
        <source
          media="(max-width: 1023px)"
          srcset="
            {{ section.settings.hero_mobile | image_url: width: 768 }} 768w,
            {{ section.settings.hero_mobile | image_url: width: 480 }} 480w
          "
        >
        {{
          section.settings.hero_desktop
          | image_url: width: 768
          | image_tag: alt: section.settings.heading, loading: 'lazy', class: 'tw:w-full tw:h-auto'
        }}
      </picture>
    {% elsif section.settings.hero_desktop != blank and section.settings.hero_mobile == blank %}
      <picture>
        <source
          srcset="
            {{ section.settings.hero_desktop | image_url: width: 1920 }} 1920w,
            {{ section.settings.hero_desktop | image_url: width: 1440 }} 1440w,
            {{ section.settings.hero_desktop | image_url: width: 768 }} 768w,
            {{ section.settings.hero_desktop| image_url: width: 480 }} 480w
          "
        >
        {{
          section.settings.hero_desktop
          | image_url: width: 768
          | image_tag: alt: section.settings.heading, loading: 'lazy', class: 'tw:w-full tw:h-auto'
        }}
      </picture>
    {% elsif section.settings.hero_desktop == blank and section.settings.hero_mobile != blank %}
      <picture>
        <source
          srcset="
            {{ section.settings.hero_mobile | image_url: width: 1920 }} 1920w,
            {{ section.settings.hero_mobile | image_url: width: 1440 }} 1440w,
            {{ section.settings.hero_mobile | image_url: width: 768 }} 768w,
            {{ section.settings.hero_mobile| image_url: width: 480 }} 480w
          "
        >
        {{
          section.settings.hero_mobile
          | image_url: width: 768
          | image_tag: alt: section.settings.heading, loading: 'lazy', class: 'tw:w-full tw:h-auto'
        }}
      </picture>
    {% else %}
      {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
    <div class="content-overlay tw:absolute tw:inset-0 tw:flex tw:items-center tw:pl-4 tw:lg:pl-15">
      <div class="content-wrapper tw:w-82 tw:lg:w-162 tw:flex tw:flex-col tw:gap-4">
        {%- if section.settings.heading != blank -%}
          <h1 class="tw:text-white tw:text-3xl tw:lg:text-4xl">
            {{- section.settings.heading | escape -}}
          </h1>
        {%- endif -%}
        {%- if section.settings.subheading != blank -%}
          <p class="tw:text-white text-base">
            {{- section.settings.subheading | escape -}}
          </p>
        {%- endif -%}
        {% if section.settings.cta_label != blank %}
          <a
            href="{{ section.settings.cta_link }}"
            class="tw:inline-block tw:px-8 tw:py-4 tw:bg-white tw:text-dark tw:text-base tw:rounded-lg tw:text-center tw:w-fit {% if section.settings.cta_link == blank %}tw:opacity-80{% else %}tw:pointer{% endif %}"
          >
            {{- section.settings.cta_label | escape -}}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "t:sections.hero-section.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "blocks": [],
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_desktop",
      "label": "t:sections.hero-section.settings.hero_desktop.label"
    },
    {
      "type": "image_picker",
      "id": "hero_mobile",
      "label": "t:sections.hero-section.settings.hero_mobile.label"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "t:sections.hero-section.settings.heading.label",
      "default": "t:sections.hero-section.settings.heading.default"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "t:sections.hero-section.settings.subheading.label",
      "default": "t:sections.hero-section.settings.subheading.default"
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "t:sections.hero-section.settings.cta_label.label",
      "default": "t:sections.hero-section.settings.cta_label.default"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "t:sections.hero-section.settings.cta_link.label"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:general.padding.padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:general.padding.padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "t:sections.hero-section.presets"
    }
  ]
}
{% endschema %}
