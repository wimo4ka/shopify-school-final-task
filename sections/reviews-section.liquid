{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }


  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% assign reviews = product.metafields.custom.reviews.value %}

<section
  class="reviews section-{{ section.id }} section-{{ section.id }}-padding"
  aria-labelledby="reviews-heading-{{ section.id }}"
>
  <div class="container">
    <div class="tw:m-auto tw:max-w-146 tw:mt-6 tw:lg:max-w-full">
      {%- if reviews == blank -%}
        <h2 
          id="reviews-heading-{{ section.id }}"
          class="no-reviews">
          {{- 'reviews.no_reviews' | t | default: 'There is no reviews on this product...' -}}
        </h2>
      {%- else -%}
        {%- if section.settings.heading != blank -%}
          <h2
            id="reviews-heading-{{ section.id }}"
            class="tw:text-dark tw:text-2xl tw:text-center tw:mb-8 tw:lg:text-3xl tw:lg:mb-12"
          >
            {{ section.settings.heading | escape | default: 'Reviews' }}
          </h2>
          <div class="reviews-card-grid tw:flex tw:flex-col tw:gap-4 tw:lg:flex-row">
            {%- for review_item in reviews limit: section.settings.reviews_to_show -%}
              {% render 'review-card', review: review_item %}
            {%- endfor -%}
          </div>
        {%- endif -%}
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Reviews section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.reviews.settings.heading.label",
      "default": "t:sections.reviews.settings.heading.default"
    },
    {
      "type": "range",
      "id": "reviews_to_show",
      "label": "t:sections.reviews.settings.reviews_to_show.label",
      "default": 3,
      "min": 1,
      "max": 10,
      "step": 1
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:general.padding.padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:general.padding.padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "t:sections.reviews.presets"
    }
  ]
}
{% endschema %}
