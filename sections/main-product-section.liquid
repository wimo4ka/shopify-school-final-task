{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.66 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.66 | round: 0 }}px;
  }


  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section
  class="main-product-section section-{{ section.id }} section-{{ section.id }}-padding tw:w-full"
  id="mainProduct"
  data-section-id="{{ section.id }}"
>
  <div class="container tw:lg:grid tw:lg:grid-cols-[2.6fr_1fr] tw:mlg:grid-cols-[1.8fr_1fr] tw:xl:grid-cols-[1.3fr_1fr] tw:lg:gap-x-2 tw:xl:gap-x-15">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'product-link' %}
          <div class="tw:lg:col-span-2">
            {% render 'product-link', product: product %}
          </div>
        {% when 'product-gallery' %}
          <div class="tw:lg:row-span-10">
            {% render 'product-gallery', product: product, min_rating: block.settings.min_high_raiting %}
          </div>
        {% when 'product-title' %}
          {% if product.title != blank %}
            <div class="tw:m-auto tw:max-w-146 tw:lg:m-0">
              <h2 class="tw:text-dark tw:text-2xl tw:mt-6 tw:lg:text-3xl tw:lg:m-0">
                {{- product.title -}}
              </h2>
            </div>
          {% endif %}
        {% when 'star-rating' %}
          <div class="tw:m-auto tw:max-w-146 tw:mt-2 tw:lg:mb-0 tw:lg:ml-0 tw:lg:mr-0">
            {% render 'star-rating', rating_object: product.metafields.custom.rating, show_rating_num: true %}
          </div>
        {% when 'product-decription' %}
          {%- if product.description != blank -%}
            <div class="tw:m-auto tw:max-w-146 tw:lg:m-0">
              <div class="tw:text-gray tw:text-sm tw:mt-3">
                {{- product.description | strip -}}
              </div>
            </div>
          {%- endif -%}
        {% when 'product-price' %}
          <div role="status" class="tw:m-auto tw:max-w-146 tw:mt-6 tw:lg:mr-0 tw:lg:mb-0 tw:lg:ml-0">
            {%- render 'product-price', product: product, use_variant: true, show_badges: block.settings.show_bages -%}
          </div>
        {% when 'color-picker' %}
          <div
            class="tw:block tw:m-auto tw:max-w-146 tw:mt-6 tw:lg:mr-0 tw:lg:mb-0 tw:lg:ml-0"
          >
            {%- render 'color-picker', product: product -%}
          </div>
        {% when 'size-option' %}
          <div
            class="tw:block tw:m-auto tw:max-w-146 tw:mt-6 tw:lg:mr-0 tw:lg:mb-0 tw:lg:ml-0"
          >
            {%- render 'size-select', product: product -%}
          </div>
        {% when 'buy_button' %}
          <div
            class="tw:block tw:m-auto tw:max-w-146 tw:mt-6 tw:lg:mr-0 tw:lg:mb-0 tw:lg:ml-0"
          >
            {%- render 'product-form', product: product -%}
          </div>
        {% when 'checkout_details' %}
          <div
            class="tw:block tw:m-auto tw:max-w-146 tw:mt-6 tw:lg:mr-0 tw:lg:mb-0 tw:lg:ml-0"
          >
            <div class="tw:text-dark tw:text-sm tw:w-full tw:flex tw:gap-2">
              {%- if block.settings.iconShipping != blank -%}
                {{
                  product.block.settings.iconShipping
                  | image_url: width: 20
                  | image_tag:
                    alt: block.settings.iconShipping.label,
                    class: 'icon tw:w-5 tw:h-5 tw:object-cover tw:aspect-square'
                }}
              {%- else -%}
                {{ 'icon-shipping.svg' | inline_asset_content }}
              {%- endif -%}
              <p>{{ block.settings.shipping | escape }}</p>
            </div>
            <div class="tw:text-dark tw:text-sm tw:w-full tw:flex tw:gap-2 tw:mt-3">
              {%- if block.settings.iconCheckout != blank -%}
                {{
                  product.block.settings.iconCheckout
                  | image_url: width: 20
                  | image_tag:
                    alt: block.settings.iconCheckout.label,
                    class: 'icon tw:w-5 tw:h-5 tw:object-cover tw:aspect-square'
                }}
              {%- else -%}
                {{ 'icon-checkout.svg' | inline_asset_content }}
              {%- endif -%}
              <p>{{ block.settings.checkout | escape }}</p>
            </div>
            <div class="tw:text-dark tw:text-sm tw:w-full tw:flex tw:gap-2 tw:mt-3">
              {%- if block.settings.iconAfterpay != blank -%}
                {{
                  product.block.settings.iconAfterpay
                  | image_url: width: 20
                  | image_tag:
                    alt: block.settings.iconAfterpay.label,
                    class: 'icon tw:w-5 tw:h-5 tw:object-cover tw:aspect-square'
                }}
              {%- else -%}
                {{ 'icon-afterpay.svg' | inline_asset_content }}
              {%- endif -%}
              <p>{{ block.settings.afterpay | escape }}</p>
            </div>
            <div class="tw:text-gray tw:text-sm tw:w-full tw:flex tw:gap-2 tw:mt-6">
              <p>{{ block.settings.description | escape }}</p>
            </div>
          </div>
      {% endcase %}
    {% endfor %}

    <script src="{{ 'color-picker.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'size-select.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'size-popup.js' | asset_url }}" defer></script>
  </div>
</section>

