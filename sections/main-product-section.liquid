{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.66 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.66 | round: 0 }}px;
  }


  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section
  class="main-product-section section-{{ section.id }} section-{{ section.id }}-padding tw:w-full"
  id="mainProduct"
  data-section-id="{{ section.id }}"
>
  <div class="container tw:lg:grid tw:lg:grid-cols-[2.6fr_1fr] tw:mlg:grid-cols-[1.8fr_1fr] tw:xl:grid-cols-[1.3fr_1fr] tw:lg:gap-x-2 tw:xl:gap-x-15">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'product-link' %}
          <div class="tw:lg:col-span-2">
            {% render 'product-link', product: product %}
          </div>
        {% when 'product-gallery' %}
          <div class="tw:lg:row-span-10">
            {% render 'product-gallery', product: product, min_rating: block.settings.min_high_raiting %}
          </div>
        {% when 'product-title' %}
          {% if product.title != blank %}
            <div class="tw:m-auto tw:max-w-146 tw:lg:m-0">
              <h2 class="tw:text-dark tw:text-2xl tw:mt-6 tw:lg:text-3xl tw:lg:m-0">
                {{- product.title -}}
              </h2>
            </div>
          {% endif %}
        {% when 'star-rating' %}
          {% render 'star-rating', product: product %}
        {% when 'product-decription' %}
          {%- if product.description != blank -%}
            <div class="tw:m-auto tw:max-w-146 tw:lg:m-0">
              <div class="tw:text-gray tw:text-sm tw:mt-3">
                {{- product.description | strip -}}
              </div>
            </div>
          {%- endif -%}
        {% when 'product-price' %}
          <div role="status" class="tw:m-auto tw:max-w-146 tw:mt-6 tw:lg:mr-0 tw:lg:mb-0 tw:lg:ml-0">
            {%- render 'product-price', product: product, use_variant: true, show_badges: block.settings.show_bages -%}
          </div>
        {% when 'color-picker' %}
          <color-picker
            role="radiogroup"
            aria-live="polite"
            aria-atomic="true"
            class="tw:block tw:m-auto tw:max-w-146 tw:mt-6 tw:lg:mr-0 tw:lg:mb-0 tw:lg:ml-0"
          >
            {%- render 'color-picker', product: product -%}
          </color-picker>
        {% when 'size-option' %}
          <div
            class="tw:block tw:m-auto tw:max-w-146 tw:mt-6 tw:lg:mr-0 tw:lg:mb-0 tw:lg:ml-0"
          >
            {%- render 'size-select', product: product -%}
          </div>
      {% endcase %}
    {% endfor %}
    <script src="{{ 'product-gallery-swiper.js' | asset_url }}" defer></script>
    <script src="{{ 'color-picker.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'size-select.js' | asset_url }}" defer="defer"></script>
  </div>
</section>

{% schema %}
{
  "name": "t:sections.main-product-section.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:sections.general.padding.padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:sections.general.padding.padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 24
    }
  ],
  "blocks": [
    {
      "type": "product-link",
      "name": "t:sections.main-product-section.blocks.product-link.name",
      "limit": 1
    },
    {
      "type": "product-gallery",
      "name": "t:sections.main-product-section.blocks.product-gallery.name",
      "limit": 1,
      "settings": [
        {
          "type": "range",
          "id": "min_high_raiting",
          "min": 1,
          "max": 5,
          "step": 0.1,
          "label": "t:sections.main-product-section.blocks.product-gallery.settings.min_high_raiting.label",
          "default": 3.5
        }
      ]
    },
    {
      "type": "product-title",
      "name": "t:sections.main-product-section.blocks.product-title.name",
      "limit": 1
    },
    {
      "type": "star-rating",
      "name": "t:sections.main-product-section.blocks.star-rating.name",
      "limit": 1
    },
    {
      "type": "product-decription",
      "name": "t:sections.main-product-section.blocks.product-decription.name",
      "limit": 1
    },
    {
      "type": "product-price",
      "name": "t:sections.main-product-section.blocks.product-price.name",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "show_bages",
          "label": "t:sections.main-product-section.blocks.product-gallery.settings.show_bages.label",
          "default": true
        }
      ]
    },
    {
      "type": "color-picker",
      "name": "t:sections.main-product-section.blocks.color-picker.name",
      "limit": 1
    },
    {
      "type": "size-option",
      "name": "t:sections.main-product-section.blocks.size-option.name",
      "limit": 1
    }
  ],
  "presets": [
    {
      "name": "Main product section"
    }
  ]
}
{% endschema %}
